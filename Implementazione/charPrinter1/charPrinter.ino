}


void printChar(char c, int dir, bool neg){
  int drawBit = 1;
  if(neg){
    drawBit = 0;
  }
  if(dir ==  1){
    for(int i =  charW-1; i >= 0; i--){
      for(int j = charH-1; j >= 0; j--){
        if(drawBit == bitRead(chars[((byte)c)-difAscii][j],i)){
